<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Product Edit</h4>
            <h6>Update your product</h6>
        </div>
        <div class="page-btn">
            <a href="/admin/productlist" class="btn btn-added">
                <i class="fa fa-arrow-left"></i> Return list
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form method="POST" action="/admin/editproduct" enctype="multipart/form-data" id="productForm">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <input type="hidden" name="imgUrl" value="<%= product.imgUrl %>">
                        
                        <div class="form-group row mb-3">
                            <label class="col-sm-3 col-form-label">Product Name</label>
                            <div class="col-sm-9">
                                <input type="text" name="title" value="<%= product.title %>" class="form-control" required>
                            </div>
                        </div>
                        
                        <div class="form-group row mb-3">
                            <label class="col-sm-3 col-form-label">Category</label>
                            <div class="col-sm-9">
                                <select class="form-select" name="category" required>
                                    <% categories.forEach(function(category) { %>
                                        <option value="<%= category._id %>" <%= product.category.toString() === category._id.toString() ? 'selected' : '' %>><%= category.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-group row mb-3">
                            <label class="col-sm-3 col-form-label">Brand</label>
                            <div class="col-sm-9">
                                <select class="form-select" name="brand" required>
                                    <% brands.forEach(function(brand) { %>
                                        <option value="<%= brand._id %>" <%= product.brand.toString() === brand._id.toString() ? 'selected' : '' %>><%= brand.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-group row mb-3">
                            <label class="col-sm-3 col-form-label">Quantity</label>
                            <div class="col-sm-9">
                                <input type="number" name="quantity" value="<%= product.quantity %>" class="form-control" required>
                            </div>
                        </div>
                        
                        <div class="form-group row mb-3">
                            <label class="col-sm-3 col-form-label">Price</label>
                            <div class="col-sm-9">
                                <input type="number" name="price" value="<%= product.price %>" class="form-control" required>
                            </div>
                        </div>
                        
                        <div class="form-group row mb-3">
                            <label class="col-sm-3 col-form-label">Description</label>
                            <div class="col-sm-9">
                                <textarea name="description" class="form-control" rows="4" required><%= product.description %></textarea>
                            </div>
                        </div>
                        
                        <div class="form-group row mt-4">
                            <div class="col-sm-12 text-center">
                                <button type="submit" class="btn btn-submit me-2">Save Changes</button>
                                <a href="/admin/productlist" class="btn btn-cancel">Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="product-img">
                        <img src="<%= product.imgUrl %>" alt="product image" class="img-fluid">
                    </div>
                    <div class="mt-3">
                        <div class="form-group">
                            <label class="mb-2"><strong>Change Product Image</strong></label>
                            <div class="image-upload">
                                <input type="file" name="image" class="form-control" form="productForm" id="product-image" onchange="previewImage(this)">
                                <div class="image-uploads mt-2">
                                    <img src="/template/img/icons/upload.svg" alt="img">
                                    <h4>Drag and drop a file to upload</h4>
                                </div>
                            </div>
                            <div id="file-name-display" class="mt-2 text-primary"></div>
                            <div id="preview-container" class="mt-3 text-center" style="display: none;">
                                <h6>Chosen picture:</h6>
                                <div class="position-relative d-inline-block">
                                    <img id="preview-image" src="#" alt="Preview" style="max-width: 100%; max-height: 200px; border: 1px solid #ddd; border-radius: 4px; padding: 5px;">
                                    <button type="button" class="btn btn-danger btn-sm position-absolute" style="top: -10px; right: -10px; border-radius: 50%; width: 25px; height: 25px; padding: 0; line-height: 25px;" onclick="clearSelectedImage()">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <p class="text-muted small mt-2">Leave empty to keep current image</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>