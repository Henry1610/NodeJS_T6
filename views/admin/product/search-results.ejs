<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Kết quả tìm kiếm</h4>
            <h6>Tìm thấy ${totalResults} kết quả cho "${keyword}"</h6>
        </div>
        <div class="page-btn">
            <a href="/admin/productlist" class="btn btn-added">
                <i class="fa fa-arrow-left"></i> Back
            </a>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body">
            <div class="table-top">
                <div class="search-set">
                    <form action="/admin/product-search" method="GET">
                        <div class="search-input">
                            <input type="text" name="keyword" value="${keyword}" class="form-control" placeholder="Tìm kiếm sản phẩm...">
                            <button type="submit" class="btn btn-searchset"><img src="/template/img/icons/search-white.svg" alt="img"></button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="table datanew">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Danh mục</th>
                            <th>Thương hiệu</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (products && products.length > 0) { %>
                            <% products.forEach(function(product) { %>
                                <tr>
                                    <td><%= product.title %></td>
                                    <td>
                                        <img src="<%= product.imgUrl %>" alt="<%= product.title %>" style="width: 50px; height: 50px; object-fit: cover;">
                                    </td>
                                    <td><%= product.categoryName || 'N/A' %></td>
                                    <td><%= product.brandName || 'N/A' %></td>
                                    <td><%= product.price.toLocaleString() %></td>
                                    <td><%= product.quantity %></td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="/admin/productdetail/<%= product._id %>" class="btn btn-sm btn-info me-1">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            <a href="/admin/editproduct/<%= product._id %>" class="btn btn-sm btn-primary me-1">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <form action="/admin/delete-product" method="POST" style="display:inline;">
                                                <input type="hidden" name="productId" value="<%= product._id %>">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center">Không tìm thấy sản phẩm nào phù hợp</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>