</div>

<script>
   document.addEventListener('DOMContentLoaded', function () {
    const addToCartBtn = document.getElementById('addToCart');
    if (addToCartBtn) {
      addToCartBtn.addEventListener('click', function (event) {
        event.preventDefault(); // Ch·∫∑n submit ngay l·∫≠p t·ª©c
        alert('Th√™m th√†nh c√¥ng! üéâ');

        // Sau khi alert xong, m·ªõi submit form
        setTimeout(() => {
          addToCartBtn.closest('form').submit();
        }, 100); // Delay nh·∫π ƒë·ªÉ ng∆∞·ªùi d√πng th·∫•y alert
      });
    }
  });
  document.addEventListener('DOMContentLoaded', function() {
    const quantityInput = document.getElementById('quantity');
    const decreaseBtn = document.getElementById('decreaseQuantity');
    const increaseBtn = document.getElementById('increaseQuantity');
    const wishlistBtn = document.getElementById('addToWishlist');
    
    // X·ª≠ l√Ω n√∫t gi·∫£m s·ªë l∆∞·ª£ng
    decreaseBtn.addEventListener('click', function() {
      const currentValue = parseInt(quantityInput.value);
      if (currentValue > 1) {
        quantityInput.value = currentValue - 1;
      }
    });
    
    // X·ª≠ l√Ω n√∫t tƒÉng s·ªë l∆∞·ª£ng
    increaseBtn.addEventListener('click', function() {
      const currentValue = parseInt(quantityInput.value);
      const maxValue = parseInt(quantityInput.getAttribute('max'));
      if (currentValue < maxValue) {
        quantityInput.value = currentValue + 1;
