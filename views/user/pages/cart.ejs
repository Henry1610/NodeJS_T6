<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Xử lý nút tăng giảm số lượng
        const decreaseBtns = document.querySelectorAll('.decrease-btn');
        const increaseBtns = document.querySelectorAll('.increase-btn');
        const quantityInputs = document.querySelectorAll('.quantity-input');
        
        decreaseBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const productId = this.dataset.id;
                const input = document.querySelector(`.quantity-input[data-id="${productId}"]`);
                let value = parseInt(input.value);
                if (value > 1) {
                    value--;
                    input.value = value;
                    updateQuantity(productId, value);
                }
            });
        });
        
        increaseBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const productId = this.dataset.id;
                const input = document.querySelector(`.quantity-input[data-id="${productId}"]`);
                let value = parseInt(input.value);
                const max = parseInt(input.getAttribute('max'));
                if (value < max) {
                    value++;
                    input.value = value;
                    updateQuantity(productId, value);
                }
            });
        });
        
        quantityInputs.forEach(input => {
            input.addEventListener('change', function() {
                const productId = this.dataset.id;
                let value = parseInt(this.value);
                const max = parseInt(this.getAttribute('max'));
                
                if (isNaN(value) || value < 1) {
                    value = 1;
                } else if (value > max) {
                    value = max;
                }
                
                this.value = value;
                updateQuantity(productId, value);
            });
        });
        
        // Hàm cập nhật số lượng sản phẩm
        function updateQuantity(productId, quantity) {
            // Gửi yêu cầu AJAX để cập nhật số lượng
            // Đây chỉ là mô phỏng, cần thay thế bằng AJAX thực tế
            console.log(`Cập nhật sản phẩm ${productId} với số lượng ${quantity}`);
            
            // Tạm thời cập nhật giao diện
            updateUI();
        }
        
        // Cập nhật giao diện
        function updateUI() {
            let totalPrice = 0;
            
            document.querySelectorAll('tbody tr').forEach(row => {
                const checkbox = row.querySelector('.item-checkbox');
                if (checkbox && checkbox.checked) {
                    const priceText = row.querySelector('td:nth-child(4) .fw-bold').textContent;
                    const price = parseInt(priceText.replace(/\D/g, ''));
                    const quantity = parseInt(row.querySelector('.quantity-input').value);
                    const itemTotal = price * quantity;
                    
                    row.querySelector('.item-total').textContent = itemTotal.toLocaleString('vi-VN') + '₫';
                    totalPrice += itemTotal;
                }
            });
            
            // Cập nhật tổng tiền
            const shippingFee = totalPrice >= 500000 ? 0 : 30000;
            document.querySelector('.card-body .d-flex:nth-child(1) .text-end').textContent = totalPrice.toLocaleString('vi-VN') + '₫';
            document.querySelector('.card-body .d-flex:nth-child(4) .text-end').textContent = (totalPrice + shippingFee).toLocaleString('vi-VN') + '₫';
        }
        
        // Xử lý checkbox
        const checkboxes = document.querySelectorAll('.item-checkbox');
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', updateUI);
        });
    });
</script> 