<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="POS - Bootstrap Admin Template">
    <meta name="keywords"
        content="admin, estimates, bootstrap, business, corporate, creative, management, minimal, modern,  html5, responsive">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>Dreamss Pos admin template</title>

    <link rel="shortcut icon" type="image/x-icon" href="/template/img/favicon.jpg">

    <link rel="stylesheet" href="/template/css/bootstrap.min.css">

    <link rel="stylesheet" href="/template/css/animate.css">

    <link rel="stylesheet" href="/template/css/dataTables.bootstrap4.min.css">

    <link rel="stylesheet" href="/template/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="/template/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="/template/css/style.css">
</head>

<body>
    <div id="global-loader">
        <div class="whirly-loader"> </div>
    </div>

    <div class="main-wrapper">

        
        <%- include('../../components/header.ejs')%>
        <%- include('../../components/sidebar.ejs')%>

        <div class="page-wrapper">
            <div class="content">
                <div class="page-header">
                    <div class="page-title">
                        <h4>Product Edit</h4>
                        <h6>Update your product</h6>
                    </div>
                    <div class="page-btn">
                        <a href="/admin/productlist" class="btn btn-added">
                            <i class="fa fa-arrow-left"></i> Return list
                        </a>
                    </div>
                </div>
            
                <div class="row">
                    <div class="col-lg-8 col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <form method="POST" action="/admin/editproduct" enctype="multipart/form-data" id="productForm">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <input type="hidden" name="imgUrl" value="<%= product.imgUrl %>">
                                    
                                    <div class="form-group row mb-3">
                                        <label class="col-sm-3 col-form-label">Product Name</label>
                                        <div class="col-sm-9">
                                            <input type="text" name="title" value="<%= product.title %>" class="form-control" required>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row mb-3">
                                        <label class="col-sm-3 col-form-label">Category</label>
                                        <div class="col-sm-9">
                                            <select class="form-select" name="category" required>
                                                <% categories.forEach(function(category) { %>
                                                    <option value="<%= category._id %>" <%= product.category.toString() === category._id.toString() ? 'selected' : '' %>><%= category.name %></option>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row mb-3">
                                        <label class="col-sm-3 col-form-label">Brand</label>
                                        <div class="col-sm-9">
                                            <select class="form-select" name="brand" required>
                                                <% brands.forEach(function(brand) { %>
                                                    <option value="<%= brand._id %>" <%= product.brand.toString() === brand._id.toString() ? 'selected' : '' %>><%= brand.name %></option>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row mb-3">
                                        <label class="col-sm-3 col-form-label">Quantity</label>
                                        <div class="col-sm-9">
                                            <input type="number" name="quantity" value="<%= product.quantity %>" class="form-control" required>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row mb-3">
                                        <label class="col-sm-3 col-form-label">Price</label>
                                        <div class="col-sm-9">
                                            <input type="number" name="price" value="<%= product.price %>" class="form-control" required>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row mb-3">
                                        <label class="col-sm-3 col-form-label">Description</label>
                                        <div class="col-sm-9">
                                            <textarea name="description" class="form-control" rows="4" required><%= product.description %></textarea>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row mt-4">
                                        <div class="col-sm-12 text-center">
                                            <button type="submit" class="btn btn-submit me-2">Save Changes</button>
                                            <a href="/admin/productlist" class="btn btn-cancel">Back</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="product-img">
                                    <img src="<%= product.imgUrl %>" alt="product image" class="img-fluid">
                                </div>
                                <div class="mt-3">
                                    <div class="form-group">
                                        <label class="mb-2"><strong>Change Product Image</strong></label>
                                        <div class="image-upload">
                                            <input type="file" name="image" class="form-control" form="productForm" id="product-image" onchange="previewImage(this)">
                                            <div class="image-uploads mt-2">
                                                <img src="/template/img/icons/upload.svg" alt="img">
                                                <h4>Drag and drop a file to upload</h4>
                                            </div>
                                        </div>
                                        <div id="file-name-display" class="mt-2 text-primary"></div>
                                        <div id="preview-container" class="mt-3 text-center" style="display: none;">
                                            <h6>Chosen picture:</h6>
                                            <div class="position-relative d-inline-block">
                                                <img id="preview-image" src="#" alt="Preview" style="max-width: 100%; max-height: 200px; border: 1px solid #ddd; border-radius: 4px; padding: 5px;">
                                                <button type="button" class="btn btn-danger btn-sm position-absolute" style="top: -10px; right: -10px; border-radius: 50%; width: 25px; height: 25px; padding: 0; line-height: 25px;" onclick="clearSelectedImage()">
                                                    <i class="fa fa-times"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <p class="text-muted small mt-2">Leave empty to keep current image</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

       
    


    <script src="/template/js/jquery-3.6.0.min.js"></script>

    <script src="/template/js/feather.min.js"></script>

    <script src="/template/js/jquery.slimscroll.min.js"></script>

    <script src="/template/js/jquery.dataTables.min.js"></script>
    <script src="/template/js/dataTables.bootstrap4.min.js"></script>

    <script src="/template/js/bootstrap.bundle.min.js"></script>

    <script src="/template/plugins/apexchart/apexcharts.min.js"></script>
    <script src="/template/plugins/apexchart/chart-data.js"></script>

    <script src="/template/js/script.js"></script>
    
    <script>
        function previewImage(input) {
            const previewContainer = document.getElementById('preview-container');
            const previewImage = document.getElementById('preview-image');
            const fileNameDisplay = document.getElementById('file-name-display');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    // Hiển thị ảnh đã chọn
                    previewImage.src = e.target.result;
                    previewContainer.style.display = 'block';
                    
                    // Hiển thị tên file
                    fileNameDisplay.textContent = 'Chosen File : ' + input.files[0].name;
                };
                
                reader.readAsDataURL(input.files[0]);
            } else {
                // Nếu không có file được chọn
                previewContainer.style.display = 'none';
                fileNameDisplay.textContent = '';
            }
        }
        
        function clearSelectedImage() {
            // Lấy tham chiếu đến input file
            const fileInput = document.getElementById('product-image');
            const previewContainer = document.getElementById('preview-container');
            const fileNameDisplay = document.getElementById('file-name-display');
            
            // Xóa giá trị của input file (reset file đã chọn)
            fileInput.value = '';
            
            // Ẩn phần xem trước
            previewContainer.style.display = 'none';
            
            // Xóa thông tin tên file
            fileNameDisplay.textContent = '';
        }
    </script>
</body>

</html>


